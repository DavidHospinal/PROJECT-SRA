<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo del Spinner (el shape personalizado que ya tienes) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo blanco -->
            <corners android:radius="5dp" /> <!-- Esquinas redondeadas -->
            <stroke
                android:width="1dp"
                android:color="#635E5E" /> <!-- Borde del spinner -->
        </shape>
    </item>

    <!-- Ícono de flecha hacia abajo -->
    <item android:drawable="@drawable/baseline_keyboard_arrow_down_24"
    android:gravity="end|center_vertical"
    android:right="5dp" />
</layer-list>